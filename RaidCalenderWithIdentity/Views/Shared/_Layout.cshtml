<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Raid Kalender</title>
    <!-- Latest compiled and minified CSS -->

    <link href="~/Scripts/bootstrap-3.3.7/bootstrap.min.css" rel="stylesheet" />

    <!-- Optional theme -->

    <link href="~/Scripts/bootstrap-3.3.7/bootstrap-theme.min.css" rel="stylesheet" />

    <!-- Latest compiled and minified JavaScript -->

    <script src="~/Scripts/bootstrap-3.3.7/bootstrap.min.js"></script>

    @* jquery *@
    <script src="~/Scripts/jquery-3.2.1.js"></script>
    @* Font Awesome *@
    <link href="~/Scripts/font-awesome-4.7.0/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    @* angular *@
    <script src="~/Scripts/angular.min.js"></script>
    @* Calender *@
    <link href='~/Scripts/fullcalender-3.3.1/fullcalendar.min.css' rel='stylesheet' />
    <link href='~/Scripts/fullcalender-3.3.1/fullcalendar.print.min.css' rel='stylesheet' media='print' />
    <script src='~/Scripts/fullcalender-3.3.1/lib/moment.min.js'></script>
