    <script src='~/Scripts/fullcalender-3.3.1/fullcalendar.min.js'></script>
    <script src='~/Scripts/fullcalender-3.3.1/locale-all.js'></script>
    @* Calender *@
    
    @* custom *@
    <link href="~/Scripts/custom/window.css" rel="stylesheet" />
    <script src="~/Scripts/custom/calender.js"></script>
    @* custom *@
    @* Wichtig, da sonst das got net mvc framework nicht richtig angezeigt wird *@
    <link href="~/Content/Site.css" rel="stylesheet" />
    @* Timepicker *@
    <script src="~/Scripts/timepickerByjonthornton/jquery.timepicker.min.js"></script>
    <link href="~/Scripts/timepickerByjonthornton/jquery.timepicker.css" rel="stylesheet" />
</head>
<body>

    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Raid Calender", "Index", "Gw2RaidCalender", new { area = "" }, new { @class = "navbar-brand" })</li>
                    <li>@Html.ActionLink("HoT Event Timer", "Index", "EventTimer")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Meine Guild Wars 2 Web Apps</p>
        </footer>
    </div>
    @RenderSection("scripts", required: false)
</body>
</html>
