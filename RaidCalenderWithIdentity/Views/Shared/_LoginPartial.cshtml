@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm"}))
    {
    @Html.AntiForgeryToken()
        
        <li>
            <a href="@Url.Action("Index", "Manage", routeValues:null)">
                <i class="fa fa-user fa-lg"></i>
                <span class="nav-text">Hallo @User.Identity.GetUserName() !</span>
            </a>
        </li>
        <li>
            <a href="javascript:document.getElementById('logoutForm').submit()">
                <i class="fa fa-sign-out fa-lg"></i>
                <span class="nav-text">Abmelden</span>
            </a>
        </li>
    }
}
else
{
        <li>
            <a id="registerLink" href="@Url.Action("Register", "Account", routeValues: null)">
                <i class="fa fa-sign-in fa-lg"></i>
                <span class="nav-text">Registrieren</span>
            </a>
        </li>
        <li>
            <a id="loginLink" href="@Url.Action("Login", "Account", routeValues: null)">
                <i class="fa fa-sign-in fa-lg"></i>
                <span class="nav-text">Login</span>
            </a>
        </li>
}
